@media only screen and (min-width: 720px)
	/*#highlight
		height 400px*/

	#navegation
		top 30%

		a
			color blanco
			height 0
			opacity 0
			padding 0
			text-transform uppercase
			transform(translateX(500px) translateY(-500px))
			text-shadow_lindo()
			visibility hidden
			width 0

		.selected
			a
				background negro_transparente
				box-shadow(inset 0 0 20px negro)
				border-radius(5px)
				cursor default
				font-size 1.1em
				height auto
				opacity 1
				padding 1em 2em
				transform(translateX(0px) translateY(0px))
				visibility visible
				width auto

				span
					display block

