/* highlight Styles */
#highlight
	// height 150px
	margin 0
	overflow hidden
	position relative
	text-align left
	width 100%

	img
		border none
		border-radius( 0 0 4px 4px)
		display block
		opacity 0
		position absolute
		width 100%

#navegation
	position absolute
	text-align center
	top 10%
	width 100%
	z-index 6

	p
		display inline-block
		margin 0
		padding 0
		transition(all 0.8s ease-in-out)

		a
			border-radius(50%)
			background rgba(255,255,255,0.6)
			display inline-block
			height 5px
			margin 0 1px
			opacity 1
			padding 5px
			text-decoration none
			transition(all 0.5s ease-in-out)
			vertical-align top
			width 5px

			span
				display none

	.selected
		a
			background rojo_ladrillo
			opacity 1

