	header
		overflow hidden
		position fixed
		text-align left
		top 0
		left 0
		width 100%
		z-index 321

		.header_tittle
			position static

			h1, h2
				display block

	nav
		display inline-block
		float none
		margin 0.4em 0.4em 0 10em
		transition(all 0.5s ease-in-out)


	section
		margin-top 8em


	.main_nav
		display inline-block
		height auto
		opacity 1
		visibility visible
		transition(all 0.5s ease-in-out)

		li
			display inline-block

	#logo
		display inline-block
		margin-top 0em
		padding 0
		position absolute
		left 1em
		top 0.5em
		transition(all 0.5s ease-in-out)

		figure
			margin 0
			padding 0
			a
				display block
				margin 0
				padding 0

				img
					box-shadow(0px 0px 5px negro_transparente)
					margin 0
					padding 0
					width 150px

	#menu
		display none

	.header_address
		color blanco_grisaceo
		display inline-block
		font-family 'DroidSerifRegular'
		margin-right 0.5em
		position absolute
		right 0.5em
		text-align right
		top 0.5em

		ul
			padding 0
			margin 0

			li
				list-style none

		figure
			img
				width 152px

	.header_tittle
		display none

	.header_title_inside
		display inline-block
		margin 0 auto 0 10em
		transition(all 0.5s ease-in-out)
		width auto

		h1, h2
			display inline-block
			color #fff
			font-size 2em
			font-weight lighter
			text-shadow_lindo()

			span
				border-left 1px solid gris_claro
				display inline-block
				font-size 0.5em
				padding-left 0.5em

@media only screen and (min-width: 1150px)

	.galeria_2
		width 1120px